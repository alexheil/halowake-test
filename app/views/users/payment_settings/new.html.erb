<div class="harlem">
  Create a merchant account
</div>

<%= form_for(@payment, url: user_payment_settings_path) do |f| %>
  <%= f.hidden_field :user_id %>
  <%= render 'partials/errors/payment_setting_errors' %>
  <div class="field">
    <div class="one-thirds">
      <%= f.label :first_name %>
    </div>
    <div class="two-thirds">
      <%= f.text_field :first_name, class: "text-field" %>
    </div>
  </div>
  <div class="field">
    <div class="one-thirds">
      <%= f.label :last_name %>
    </div>
    <div class="two-thirds">
      <%= f.text_field :last_name, class: "text-field" %>
    </div>
  </div>
  <div class="field">
    <div class="one-thirds">
      <%= f.label :country %>
    </div>
    <div class="two-thirds">
      <%= f.select :country, options_for_select(country_select) %>
    </div>
  </div>
  <div class="field">
    <div class="one-thirds">
      <%= f.label :month %>
    </div>
    <div class="two-thirds">
      <%= f.text_field :month, class: "text-field" %>
    </div>
  </div>
  <div class="field">
    <div class="one-thirds">
      <%= f.label :day %>
    </div>
    <div class="two-thirds">
      <%= f.text_field :day, class: "text-field" %>
    </div>
  </div>
  <div class="field">
    <div class="one-thirds">
      <%= f.label :year %>
    </div>
    <div class="two-thirds">
      <%= f.text_field :year, class: "text-field" %>
    </div>
  </div>
  <%= f.submit "Create merchant account", data: { disable_with: 'Creating...' }, class: "submit-button" %>
<% end %>
<div class="harlem">
  By registering your account, you agree to our <%= link_to 'Terms of Use', terms_path  %> and the <a href="https://stripe.com/connect/account-terms">Stripe Connected Account Agreement</a>.
</div>