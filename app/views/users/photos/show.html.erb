<div class="wrapper dark-background">
  <div class="container">
    <div class="nameplate">
      <img class="big-image" src="<%= @photo.image_url(:large) %>">
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="container">

    <div class="nameplate border-bottom large-text">
      <div class="vote_button">
        <%= render 'users/partials/votes/vote_button' %>
      </div>
      <span class="vote_count"><%= render 'users/partials/votes/vote_count' %></span> - <span class="photo_title"><%= render "users/partials/photos/photo_title" %></span><span class="tiny-text"> - posted on <%= @photo.created_at.strftime("%m.%d.%Y") %> by <%= link_to @user.username, user_path(@user) unless @user.profile.first_name.present? || @user.profile.last_name.present? %> 
        <%= link_to(user_path(@user)) do %>
          <%= @user.profile.first_name if @user.profile.first_name.present? %> <%= @user.profile.last_name if @user.profile.last_name.present? %>
        <% end %>
         - 
        
        <% if user_signed_in? && current_user != @user %>
          <div class="first-column">
            <% if current_user.following?(@user) %>
              <%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
                       html: { method: :delete }) do |f| %>
                <%= f.submit "Unfollow", class: "follow" %>
              <% end %>
            <% else %>
              <%= form_for(current_user.active_relationships.build) do |f| %>
                <div><%= hidden_field_tag :followed_id, @user.id %></div>
                <%= f.submit "Follow", class: "follow" %>
              <% end %>
            <% end %>
          </div>
        <% elsif user_signed_in? == false %>
          <div class="first-column">
            <%= link_to "Follow", sign_in_path %>
          </div>
        <% end %>

        <% if user_signed_in? && current_user == @user %>
          <span id="edit-photo-click">Edit this photo</span>
        <% end %>

      </span>
    </div>

    <span class="photo_details"><%= render "users/partials/photos/photo_details" %></span>

  </div>
</div>

<span class="photo_purchase_form"><%= render "users/partials/photos/photo_purchase_form" %></span>

<% if user_signed_in? && current_user == @user %>

  <div id="album-form">
    <div class="profile-form-inside">
      <div id="close-photo-form">
        Close
      </div>

      <%= form_for(@photo, url: user_album_photo_path(@user, @album, @photo), remote: true) do |f| %>
        <%= render 'partials/errors/photo_errors' %>
        <div class="field">
          <div class="one-thirds">
            <%= f.label :title %>
          </div>
          <div class="two-thirds">
            <%= f.text_field :title, class: "text-field" %>
          </div>
        </div>
        <div class="field">
          <div class="one-thirds">
            <%= f.label :image %>
          </div>
          <div class="two-thirds">
            <%= f.hidden_field :image, value: Photo.new.cached_image_data %>
            <%= f.file_field :image %>
          </div>
        </div>

        <div class="field">
          <div class="one-thirds">
            <%= f.label(:photo_type, "Photo") %>
          </div>
          <div class="two-thirds">
            <%= f.radio_button(:photo_type, "photo", id: "is-photo-click") %>
          </div>
        </div>

        <div class="field">
          <div class="one-thirds">
            <%= f.label(:photo_type, "Art") %>
          </div>
          <div class="two-thirds">
            <%= f.radio_button(:photo_type, "art", id: "is-art-click") %>
          </div>
        </div>

        <div class="field-padding border-bottom border-top">
          Optional fields
        </div>

        <div id="photo-fields">
          <div class="field">
            <div class="one-thirds">
              <%= f.label :resolution %>
            </div>
            <div class="two-thirds">
              <%= f.text_field :resolution, class: "text-field" %>
            </div>
          </div>
          <div class="field">
            <div class="one-thirds">
              <%= f.label :camera %>
            </div>
            <div class="two-thirds">
              <%= f.text_field :camera, class: "text-field" %>
            </div>
          </div>
          <div class="field">
            <div class="one-thirds">
              <%= f.label :lens %>
            </div>
            <div class="two-thirds">
              <%= f.text_field :lens, class: "text-field" %>
            </div>
          </div>
          <div class="field">
            <div class="one-thirds">
              <%= f.label :aperture %>
            </div>
            <div class="two-thirds">
              <%= f.text_field :aperture, class: "text-field" %>
            </div>
          </div>
          <div class="field">
            <div class="one-thirds">
              <%= f.label :exposure %>
            </div>
            <div class="two-thirds">
              <%= f.text_field :exposure, class: "text-field" %>
            </div>
          </div>
          <div class="field">
            <div class="one-thirds">
              <%= f.label :flash %>
            </div>
            <div class="two-thirds">
              <%= f.text_field :flash, class: "text-field" %>
            </div>
          </div>
          <div class="field">
            <div class="one-thirds">
              <%= f.label :focal_length %>
            </div>
            <div class="two-thirds">
              <%= f.text_field :focal_length, class: "text-field" %>
            </div>
          </div>
          <div class="field">
            <div class="one-thirds">
              <%= f.label :iso %>
            </div>
            <div class="two-thirds">
              <%= f.text_field :iso, class: "text-field" %>
            </div>
          </div>
        </div>

        <div id="art-fields">
          <div class="field">
            <div class="one-thirds">
              <%= f.label :tool %>
            </div>
            <div class="two-thirds">
              <%= f.text_field :tool, class: "text-field" %>
            </div>
          </div>
          <div class="field">
            <div class="one-thirds">
              <%= f.label :medium %>
            </div>
            <div class="two-thirds">
              <%= f.text_field :medium, class: "text-field" %>
            </div>
          </div>
          <div class="field">
            <div class="one-thirds">
              <%= f.label :surface %>
            </div>
            <div class="two-thirds">
              <%= f.text_field :surface, class: "text-field" %>
            </div>
          </div>
          <div class="field">
            <div class="one-thirds">
              <%= f.label :style %>
            </div>
            <div class="two-thirds">
              <%= f.text_field :style, class: "text-field" %>
            </div>
          </div>
          <div class="field">
            <div class="one-thirds">
              <%= f.label :size %>
            </div>
            <div class="two-thirds">
              <%= f.text_field :size, class: "text-field" %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class="one-thirds">
            <%= f.label :description %>
          </div>
          <div class="two-thirds">
            <%= f.text_area :description, class: "text-area" %>
          </div>
        </div>

        <% if current_user.payment_setting.present? && current_user.payment_setting.stripe_id.present? %>
          <div class="field">
            <div class="one-thirds">
              <%= f.label :for_sale %>
            </div>
            <div class="two-thirds">
              <%= f.check_box :for_sale, class: "text-field", id: "for-sale" %>
            </div>
          </div>
          <div id="for-sale-container">
            <div class="field">
              <div class="one-thirds">
                <%= f.label :base_price %>
              </div>
              <div class="two-thirds">
                <%= f.text_field :base_price, class: "text-field" %>
              </div>
            </div>
            <div class="field">
              <div class="one-thirds">
                <%= f.label(:transport_type, "Downloadable") %>
              </div>
              <div class="two-thirds">
                <%= f.radio_button(:transport_type, "downloadable", id: "downloadable") %>
              </div>
            </div>
            <div class="field">
              <div class="one-thirds">
                <%= f.label(:transport_type, "Shippable") %>
              </div>
              <div class="two-thirds">
                <%= f.radio_button(:transport_type, "shippable", id: "shippable") %>
              </div>
            </div>
            <div id="shippable-fields">
              <div class="field">
                <div class="one-thirds">
                  <%= f.label :shipping_price %>
                </div>
                <div class="two-thirds">
                  <%= f.text_field :shipping_price, class: "text-field" %>
                </div>
              </div>
            </div>
            <div class="field">
              <div class="one-thirds">
                <%= f.label :currency %>
              </div>
              <div class="two-thirds">
                <%= f.text_field :currency, class: "text-field" %>
              </div>
            </div>
            <div class="field">
              <div class="one-thirds">
                <%= f.label :quantity %>
              </div>
              <div class="two-thirds">
                <%= f.text_field :quantity, class: "text-field" %>
              </div>
            </div>
          </div>
        <% end %>

        <%= f.submit "Update photo", data: { disable_with: 'Updating...' }, class: "submit-button" %>
      <% end %>

    </div>
  </div>
<% end %>