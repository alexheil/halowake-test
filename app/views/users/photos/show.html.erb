  <div class="profile-form-inside">
  <div class="close"></div>
    <div class="field">
      <div class="facebook-button">
        Facebook
      </div>
    </div>
    <div class="field">
      <div class="twitter-button">
        Twitter
      </div>
    </div>
    <div class="field">
      <div class="pinterest-button">
        Pinterest
      </div>
    </div>
    <div class="field">
      <div class="reddit-button">
        Reddit
      </div>
    </div>
    <div class="tumblr-button">
      Tumblr
    </div>
  </div>
</div>