<% if @profile.errors.any? || @theme.errors.any? || @location.errors.any? %>
  <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count + @theme.errors.count + @location.errors.count, "error") %> prevented this profile from being saved:</h2>
    <ul>
    <% @profile.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    <% @theme.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    <% @location.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>